<div class="row">

  <div class="col s12 m9 l10">

    <div class="row">
      <div class="col s4 offset-s4">
        <%# Modal Trigger %>
        <a href="#createThreadModal" class="modal-trigger btn waves-effect waves-light">Create Thread</a>
      </div>
    </div>

    <div class="row">
      <div class="col s12">

        <div class="divider"></div>
        <% @threads.each do |thread| %>
        <div class="section">
          <h5><%= thread.title %></h5>
          <p><%= thread.create_at %></p>
        </div>
        <div class="divider"></div>
        <% end %>

      </div>
    </div>

  </div>

  <div class="colhide-on-small-only m3 l2">
  </div>

</div>

<div id="createThreadModal" class="modal bottom-sheet">
  
  <form action="/threads" method="post">
    <div class="modal-content">
      <h4>Create Thread</h4>

      <div class="row">
        <div class="input-field col s8 offset-s2">
          <input type="text" name="title" id="title" class="validate">
          <label for="title">Title</label>
        </div>
      </div>

      <div class="row">
        <div class="col s12">
          <div class="row">
            <div class="input-field col s8 offset-s2">
              <textarea name="description" id="description" class="materialize-textarea"></textarea>
              <label for="description">Description</label>
            </div>
          </div>
        </div>
      </div>

    </div>
    <div class="modal-footer">
      <button class="btn waves-effect waves-light" type="submit">create
        <i class="material-icons right">send</i>
      </button>
    </div>
  </form>
</div>

<script>
$(() => {
  // the "href" attribute of .modal-trigger must specify the modal ID that wants to be triggered
  $('.modal').modal();
});
</script>